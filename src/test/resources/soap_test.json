{
  "scenarioName": "test sample soap service",
  "steps": [
    {
      "name": "test getName soap method",
      "url": "http://localhost:8080/sample-soap-service?wsdl",
      "method": "POST",
      "request": {
        "headers": {
          "Content-Type": "text/xml; charset=utf8",
          "SOAPAction": "http://odvali.ge/getName"
        },
